<div class="search-bar">
    <div class="search-bar-input">
        <input class="form-control search" @onchange=OnChange/>
    </div>
    <div class="search-bar-orderby-filter">
        <div class="order-by">
            <select>
                <option>По возрастанию цены</option>
                <option>По убыванию цены</option>
            </select>
        </div>
        <div class="choose-city">
            <button class="btn btn-secondary">City</button>
        </div>
    </div>
</div>
@code {
    [Parameter]
    public EventCallback<string> OnSearchCallback { get; set; }

    private void OnChange(ChangeEventArgs e)
    {
        OnSearchCallback.InvokeAsync(e.Value.ToString());
    }
}
